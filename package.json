{
  "name": "google-calendar",
  "version": "0.0.1",
  "description": "My simple Google Calendar",
  "scripts": {
    "start": "node --harmony server/index.js",
    "dev": "npm run nodemon & npm run watch",
    "nodemon": "nodemon --watch server --harmony server/index.js",
    "build": "browserify client/js/app.jsx -o client/js/bundle.js",
    "watch": "watchify client/js/app.jsx -o client/js/bundle.js"
  },
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "es6": true
        }
      ],
      "node-lessify"
    ]
  },
  "author": "Hans Chan<icsbun@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "google-auth-library": "^0.9.5",
    "googleapis": "^2.0.4",
    "immutable": "^3.7.3",
    "koa": "^0.20.0",
    "koa-accesslog": "0.0.2",
    "koa-bodyparser": "^2.0.0",
    "koa-mount": "^1.3.0",
    "koa-qs": "^2.0.0",
    "koa-router": "^5.1.2",
    "koa-session": "^3.1.0",
    "koa-static": "^1.4.9",
    "material-ui": "^0.9.2",
    "moment": "^2.10.3",
    "react": "^0.13.2",
    "react-router": "^0.13.3",
    "react-tap-event-plugin": "^0.1.6",
    "reflux": "^0.2.7",
    "superagent": "^1.2.0"
  },
  "devDependencies": {
    "node-lessify": "0.0.10",
    "node-static": "^0.7.6",
    "reactify": "^1.1.0"
  }
}
